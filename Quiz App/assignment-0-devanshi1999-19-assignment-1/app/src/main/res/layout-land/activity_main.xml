<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFE6E6"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#062330"
            android:gravity="center"
            android:text="@string/welcome"
            android:textColor="@color/white"
            android:textSize="26sp" />


        <LinearLayout
            android:id="@+id/entername"
            android:layout_width="691dp"
            android:layout_height="143dp"
            android:background="#D6B2B2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="252dp"
                android:layout_height="match_parent"
                android:background="#D6B2B2"
                android:gravity="center"
                android:text="@string/enter_your_name"
                android:textColor="#5D4037" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="435dp"
                android:layout_height="wrap_content"
                android:autofillHints="Full Name"
                android:ems="10"
                android:hint="@string/full_name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="#5D4037" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="684dp"
            android:layout_height="479dp"
            android:background="#C1C1C1"
            android:orientation="vertical"
            android:padding="40dp"
            tools:ignore="ExtraText">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="600dp"
                android:layout_height="36dp"
                android:background="#E2BEBE"
                android:gravity="center"
                android:text="@string/Question"
                android:textColor="#171616"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/covid_symptom"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:background="#EDE2E2"
                android:gravity="center"
                android:text="@string/fever"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="602dp"
                android:layout_height="wrap_content"
                android:background="#98E4C2"
                android:orientation="horizontal"
                android:padding="30dp">

                <Button
                    android:id="@+id/yes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:background="#EFE0E0"
                    android:text="@string/yes"
                    android:textColor="#0288D1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:background="#EAB1B1"
                    android:text="@string/no"
                    android:textColor="#1565C0"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:background="#C8AAAA"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clearbutton"
                    android:layout_width="272dp"
                    android:layout_height="match_parent"
                    android:foregroundTint="#EFE8E8"
                    android:text="@string/clear"
                    android:textColor="#5D4037"
                    app:strokeColor="#B60C0C" />//tools:ignore="DuplicateSpeakableTextCheck" />

                <Button
                    android:id="@+id/nextbutton"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/next"
                    android:textColor="#5D4037" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>